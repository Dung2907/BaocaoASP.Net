                                <a class="dropdown-item" href="page-detail-product.html">Mục chi tiết</a>
                                <a class="dropdown-item" href="page-content.html">Nội dung thông tin</a>
                                <a class="dropdown-item" href="@Url.Action("Login", "User")">Đăng nhập trang</a>
