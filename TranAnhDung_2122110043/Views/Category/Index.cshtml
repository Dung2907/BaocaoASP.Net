@model List<TranAnhDung_2122110043.Context.Category>
<!-- ========================= SECTION CONTENT ========================= -->
<style>
    .card-category .img-wrap {
        height: 150px;
        overflow: hidden;
    }

        .card-category .img-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>
    <!-- Category Section -->
    <section class="section-content padding-y">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card card-category h-100">
                            <div class="img-wrap">
                                <img src="~/Content/images/brand/1.jpg" alt="@item.name">
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">
                                    @Html.ActionLink(item.name, "ProductCategory", "Category", new { id = item.id }, new { @class = "text-dark text-decoration-none" })
                                </h4>
                                <p>@item.description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Subscribe Section -->
    <section class="py-5 bg-light border-top">
        <div class="container">
            <h2 class="text-center mb-4">Stay Updated</h2>
            <p class="text-center mb-4">Get the latest product trends and industry news straight to your inbox</p>
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6">
                    <form>
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Your Email" aria-label="Your Email" aria-describedby="button-addon2" required>
                            <button class="btn btn-warning" type="submit" id="button-addon2">
                                <i class="fa fa-envelope me-2"></i>Subscribe
                            </button>
                        </div>
                    </form>
                    <small class="text-muted">We'll never share your email address with a third-party.</small>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
